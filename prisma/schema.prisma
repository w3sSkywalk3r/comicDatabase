// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Comic {
  id String @id @default(uuid())
  title String @unique
  releaseDate String
  publisher String

  writers Writer[]
  colorists Colorist[]
  coverArtists CoverArtist[]
  editors Editor[]
  inkers Inker[]
  letterers Letterer[]
  
}

model Colorist {
  id String @id @default(uuid())
  name String @unique
  
  comics Comic[]
}

model CoverArtist {
  id String @id @default(uuid())
  name String @unique

  comics Comic[]
}

model Editor {
  id String @id @default(uuid())
  name String @unique

  comics Comic[]
}

model Inker {
  id String @id @default(uuid())
  name String @unique

  comics Comic[]
}

model Letterer {
  id String @id @default(uuid())
  name String @unique

  comics Comic[]
}

model Writer {
  id String @id @default(uuid())
  name String @unique

  comics Comic[]
}
